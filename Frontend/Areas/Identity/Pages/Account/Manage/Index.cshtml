@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
@if (Model.RequiresUsernameSetup)
{
    <div class="alert alert-warning">
        <strong>Välj ett användarnamn</strong><br />
        Du loggade in via extern inloggning.
        För att kunna kommentera och synas publikt behöver du välja ett användarnamn.
    </div>
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Användarnamn (endast visning) -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Användarnamn" disabled />
                <label asp-for="Username" class="form-label">Användarnamn</label>
            </div>

            <!-- Telefonnummer -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Ange ditt telefonnummer" />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Namn -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name">Namn</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Födelseår -->
            <div class="form-floating mb-3">
                <input asp-for="Input.BirthYear" class="form-control" type="number" min="1900" max="2100" />
                <label asp-for="Input.BirthYear">Födelseår</label>
                <span asp-validation-for="Input.BirthYear" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.NotifyOnNewPost" id="NotifyOnNewPost" />
                <label class="form-check-label" asp-for="Input.NotifyOnNewPost">
                    Skicka mejl när nya blogginlägg publiceras
                </label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
